.yuantu{
  width: 500rpx;
  height: 500rpx;
  border-radius: 250rpx;
  margin-top: 120rpx;
position: absolute;
  left: 50%;
  margin-left: -250rpx;
}
/* 旋转样式 */
.music_on{
  animation: audio-rotate 8s linear infinite;
}
 /* 旋转动画 */
@keyframes audio-rotate {
  0% {
    transform: rotateZ(0deg);
  }
  50% {
    transform: rotateZ(180deg);
  }
  100% {
    transform: rotateZ(360deg);
  }
}
